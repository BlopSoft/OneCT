RewriteEngine On

# RewriteRule ^token(.*)$ api/token.php$1
# RewriteRule ^method/account.(.*)$(.*)$ api/method/account/$1.php$2
# RewriteRule ^method/ovk.(.*)$(.*)$ api/method/onect/$1.php$2
# RewriteRule ^method/onect.(.*)$(.*)$ api/method/onect/$1.php$2
# RewriteRule ^method/newsfeed.(.*)$(.*)$ api/method/newsfeed/$1.php$2

php_flag display_errors off

<IfModule dir_module>
    DirectoryIndex index.php index.html
</IfModule>
AddDefaultCharset UTF-8
AddCharset UTF-8 .html
<FilesMatch "\.(html)$">
   Header set Cache-Control: "no-cache, no-store"
   Header unset ETag
</FilesMatch>
Header set X-Content-Type-Options nosniff